<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/stgrid_image"
            android:src="@drawable/campamb"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/stgrid_image"
            android:layout_centerInParent="true">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/stgrid_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stname"
                android:layout_marginBottom="2dp"/>

<!--            <TextView
                android:id="@+id/stgrid_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stclass"
                android:layout_below="@id/stgrid_name"/>-->
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>