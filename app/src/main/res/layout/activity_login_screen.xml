<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.student.sample.LoginScreen">

<ImageView
    android:layout_width="128dp"
    android:layout_height="128dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/campamb"
    android:id="@+id/imageView" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Login Screen"
    android:layout_below="@+id/imageView"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:textSize="25dp"
    android:id="@+id/screenname"
    android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name :"
        android:layout_below="@+id/screenname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:id="@+id/user_lbl" />
    
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_txt"
        android:ems="10"
        android:layout_alignBaseline="@+id/user_lbl"
        android:layout_toRightOf="@+id/user_lbl"
        android:layout_toEndOf="@+id/user_lbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:id="@+id/password_lbl"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/user_lbl"
        android:layout_alignRight="@+id/user_lbl"
        android:layout_alignEnd="@+id/user_lbl" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_txt"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignBaseline="@+id/password_lbl"
        android:layout_toRightOf="@+id/password_lbl"
        android:layout_toEndOf="@+id/password_lbl" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btn_login"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_above="@+id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btn_register"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
